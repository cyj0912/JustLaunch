            </StackPanel>
        </Button>
        <Button x:Name="appBtn3" Margin="191.6,220,0,0" Grid.Column="1" HorizontalAlignment="Left" Width="80" Height="100" VerticalAlignment="Top" Click="appBtn3_Click">
            <StackPanel>
                <Image x:Name="appImg3" Source="Close.png" />
                <TextBlock x:Name="appText3" Text="Empty"/>
            </StackPanel>
        </Button>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="73.6,355,0,0" TextWrapping="Wrap" Text="Config the apps that are shown on the main panel" VerticalAlignment="Top"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="73.6,376,0,0" TextWrapping="Wrap" Text="JustLaunch Alpha Preview 2" VerticalAlignment="Top"/>
    </Grid>
</Window>

            </StackPanel>
        </Button>
        <Button x:Name="appBtn5" Margin="48.6,115,0,0" Grid.Column="1" HorizontalAlignment="Left" Width="80" Height="100" VerticalAlignment="Top" Click="appBtn5_Click">
            <StackPanel>
                <Image x:Name="appImg5" Source="Close.png" />
                <TextBlock x:Name="appText5" Text="Empty"/>
            </StackPanel>
        </Button>
        <Button x:Name="appBtn2" Margin="247.6,115,0,0" Grid.Column="1" HorizontalAlignment="Left" Width="80" Height="100" VerticalAlignment="Top" Click="appBtn2_Click">
            <StackPanel>
                <Image x:Name="appImg2" Source="Close.png" />
                <TextBlock x:Name="appText2" Text="Empty"/>
            </StackPanel>
        </Button>
        <Button x:Name="appBtn4" Margin="106.6,220,0,0" Grid.Column="1" HorizontalAlignment="Left" Width="80" Height="100" VerticalAlignment="Top" Click="appBtn4_Click">
            <StackPanel>
                <Image x:Name="appImg4" Source="Close.png" />
